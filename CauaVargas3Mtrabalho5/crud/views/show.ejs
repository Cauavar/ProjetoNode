<!DOCTYPE html>
<head>
    <%- include('head'); %>
</head>

<body style="background-color: rgb(181, 182, 117);">    <header>
        <style>
            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 1px solid rgba(0,0,0,.125);
                border-radius: .25rem;
                transition: all 0.3s ease-in-out;}
                .card-body {
            flex: 1 1 auto;
            padding: 1.25rem;
        }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
            transform: translateY(-10px);
        }
    </style>

        <%- include('menu'); %>
    </header>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="main-title">Filmes</h3>
                </div>
                <% dadosFilme.forEach(function(dados) { %>
                <div class="col-md-3">
                    <div class="card">
                        <a href="/verFilme/<%= dados.id %>"><img src="imagens/<%=dados.imagem %>" style=max-width:100%; max-height:100%; width: auto; height: auto;; class="card.imagem.top" alt = "imagem" ></a>

                        <div class="card-body">
                            <h5 class="card-title">Nome: <%= dados.nomeFilme %></h5> 
                            <p class="card-text">Diretor: <%= dados.nomeFilme %></p>
                            <p class="card-text">Ano: <%= dados.ano %></p>
                            <a href="/edit/<%=dados.id %>"> 
                                <span class="material-icons ">create
                                    </span> </a>
                            <a href="/delete/<%=dados.id %>">
                                <span class="material-icons ">delete </span>
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
</body>

</html>